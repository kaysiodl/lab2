	\draw[line width=0.5mm] (B) -- (C);
    \draw[line width=0.5mm] (-2, 0) -- (3, 0);
    \draw[line width=0.5mm, dotted] (A) -- (0, -5);
    \draw[line width=0.5mm, dotted] (4, -7) -- (0, -7);
